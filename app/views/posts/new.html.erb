<h4>Create a new post</h4>

<%= render 'shared/errors', obj: @post %>

<%
=begin %>
<% #This is a form_tag form %>
<%= form_tag '/posts', method: 'post' do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <br>
  <%= label_tag :body %>
  <%= text_area_tag :body, nil, :rows => 5 %>
  <br>
  <%= submit_tag 'Create Post', class: 'btn' %>
<% end %>
<%
=end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br>
  <%= f.label :body %>
  <%= f.text_area :body, rows: 5 %>
  <br>
  <%= f.submit class: "btn" %>
<% end %>

